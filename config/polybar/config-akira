modules-center = crypto
modules-right = date time
padding-left = 2
padding-right = 2

[global/wm]
margin-top = 0
margin-bottom = 0
; }}}
; Module: volume {{{
[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%%
label-volume-foreground = ${colors.yellow}
label-muted =  MUTE
label-muted-foreground = ${colors.red}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.yellow}
ramp-headphones-0 = 
ramp-headphones-1 = 
ramp-headphones-foreground = ${colors.yellow}
; }}}
; Module: coretemp {{{
[module/coretemps]
type = custom/script
interval = 1
exec-if = sensors
exec = ~/.config/polybar/tempcores.sh
; }}}
; Module: network {{{
[module/network]
type = internal/network
interface = wired0
interval = 3
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = " %local_ip%"
label-connected-foreground = ${colors.green}
label-disconnected = ""
label-disconnected-foreground = ${colors.black}
; }}}
; Module: wifi {{{
[module/wifi]
type = internal/network
interface = wlan0
interval = 3.0
format-connected = <label-connected>
;label-connected = " %local_ip%"
label-connected = " %essid%"
label-connected-foreground = ${colors.green}
label-disconnected = ""
label-disconnected-foreground = ${colors.black}
; }}}
; Module: title {{{
[module/title]
